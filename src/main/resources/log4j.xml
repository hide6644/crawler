<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="INFOLOGFILE"
        class="org.apache.log4j.DailyRollingFileAppender">
        <param name="Threshold" value="INFO" />
        <param name="File" value="${app_home}/logs/info.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%d %p - %C.%M | %m%n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
            <param name="LevelToMatch" value="INFO" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
        <filter class="org.apache.log4j.varia.DenyAllFilter" />
    </appender>

    <appender name="WARNLOGFILE"
        class="org.apache.log4j.DailyRollingFileAppender">
        <param name="Threshold" value="WARN" />
        <param name="File" value="${app_home}/logs/warn.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%d %p - %C.%M | %m%n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
            <param name="LevelToMatch" value="WARN" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
        <filter class="org.apache.log4j.varia.DenyAllFilter" />
    </appender>

    <appender name="ERRLOGFILE"
        class="org.apache.log4j.DailyRollingFileAppender">
        <param name="Threshold" value="ERROR" />
        <param name="File" value="${app_home}/logs/error.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p - [%t] %C.%M(%F:%L) | %m%n" />
        </layout>
    </appender>

    <appender name="APPLOGFILE"
        class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${app_home}/logs/app.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p - [%t] %C.%M(%F:%L) | %m%n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
            <param name="LevelToMatch" value="DEBUG" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
            <param name="LevelToMatch" value="INFO" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
        <filter class="org.apache.log4j.varia.DenyAllFilter" />
    </appender>

    <logger name="crawler">
        <level value="DEBUG" />
        <appender-ref ref="APPLOGFILE" />
    </logger>

    <root>
        <level value="INFO" />
        <appender-ref ref="INFOLOGFILE" />
        <appender-ref ref="WARNLOGFILE" />
        <appender-ref ref="ERRLOGFILE" />
    </root>

</log4j:configuration>
